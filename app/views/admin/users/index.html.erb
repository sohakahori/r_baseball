<h1>ユーザー一覧</h1>
<div>
  <%= form_tag(admin_users_path, method: :get) do %>
    <%#= label_tag :名前 %>
    <%= text_field_tag(:search_word, @search_word, class: "form-control", placeholder: '苗字・名前・ニックネーム・苗字 名前・メールアドレス') %>
    <br>
    <%= submit_tag "検索", class: 'btn btn-success' %>
  <% end %>
</div>
<br><br><br>

<table class="table">
  <thead>
  <tr>
    <th>No.</th>
    <th>ID.</th>
    <th>苗字</th>
    <th>名前</th>
    <th>ニックネーム</th>
    <th>メールアドレス</th>
    <th>作成日時</th>
    <th>更新日時</th>
    <th>削除</th>
  </tr>
  </thead>
  <tbody>
    <% @users.each_with_index do |user, i| %>
      <tr>
        <td><%= i + 1 %></td>
        <td><%= user.id %></td>
        <td><%= user.last_name %></td>
        <td><%= user.first_name %></td>
        <td><%= user.nickname %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at.strftime('%Y年%m月%d日 %H:%M:%S') %></td>
        <td><%= user.updated_at.strftime('%Y年%m月%d日 %H:%M:%S') %></td>
        <td>
          <%= link_to "削除", admin_user_path(user), method: :delete, class: "btn btn-danger", data: {confirm: "削除してよろしいですか？"} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
