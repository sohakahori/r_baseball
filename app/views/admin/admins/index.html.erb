<div><%= link_to '新規作成', new_admin_admin_path %></div>
<table class="table">
  <thead>
  <tr>
    <th>ID</th>
    <th>名前</th>
    <th>メールアドレス</th>
    <th>Role</th>
    <th>作成日時</th>
    <th>更新日時</th>
<!--    <th>編集</th>-->
<!--    <th>削除</th>-->
  </tr>
  </thead>
  <tbody>
  <% @admins.each do |admin| %>
    <tr>
      <td><%= admin.id %></td>
      <td><%= admin.full_name %></td>
      <td><%= admin.email %></td>
      <td><%= admin.role %></td>
      <td><%= admin.created_at.strftime('%Y年%m月%d日 %H:%M:%S') %></td>
      <td><%= admin.updated_at.strftime('%Y年%m月%d日 %H:%M:%S') %></td>
<!--      <td><%#= link_to("編集", edit_admin_team_path(team), class: 'btn btn-success') %></td>-->
<!--      <td><%#= link_to("削除", admin_team_path(team), method: :delete, data: {confirm: '削除してよろしいでしょうか？'}, class: 'btn btn-danger') %></td>-->
    </tr>
  <% end %>
  </tbody>
</table>
