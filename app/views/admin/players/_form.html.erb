<% if @player.errors.any? %>
  <ul>
    <% @player.errors.full_messages.each do |msg| %>
      <li>
        <span style="color:red;"><%= msg %></span>
      </li>
    <% end %>
  </ul>
<% end %>
<%= form_for [:admin, @player.team, @player] do |f| %>
  <div class="form-group">
    <%= f.label :no, '背番号' %>
    <%= f.text_field :no, class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.label :name, '選手名' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :birthday, '誕生日' %>
    <%= f.date_field :birthday, class: 'form-control', value: @player.birthday %>
  </div>
  <div class="form-group">
    <%= f.label :position, '守備位置' %>
    <%= f.select :position, Player.positions_i18n.invert, {}, { 'class' =>'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.label :height, '身長' %>
    <%= f.text_field :height, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :weight, '体重' %>
    <%= f.text_field :weight, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :throw, '投' %>
    <%= f.select :throw, Player.throws_i18n.invert, {}, {'class' => 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.label :hit, '打席' %>
    <%= f.select :hit, Player.hits_i18n.invert, {}, {'class' => 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.label :detail, '備考' %>
    <%= f.text_area :detail, class: 'form-control' %>
  </div>
  <div><%= f.submit(button_name, class: 'btn btn-success') %></div>

<% end %>