<h1>コメント一覧</h1>
<h2>スレッド名：<%= @board.title %></h2>
<div>
  <%= form_tag(admin_board_responses_path, method: :get) do %>
    <%= text_field_tag(:user_search_word, @user_search_word, class: "form-control", placeholder: '苗字・名前・ニックネーム・苗字 名前・メールアドレス') %><br>
    <%= text_field_tag(:comment_search_word, @comment_search_word, class: "form-control", placeholder: 'コメント') %>
    <br>
    <%= submit_tag "検索", class: 'btn btn-success' %>
  <% end %>
</div>
<br><br><br>

<table class="table">
  <thead>
  <tr>
    <th>ID</th>
    <th>コメント</th>
    <th>作成者ID</th>
    <th>作成者名</th>
    <th>ニックネーム</th>
    <th>メールアドレス</th>
    <th>作成日時</th>
    <th>更新日時</th>
    <th>削除</th>
  </tr>
  </thead>
  <tbody>
    <% @responses.each do |response| %>
      <tr>
        <td><%= response.id %></td>
        <td><%= simple_format(response.body) %></td>
        <td><%= response.user.id %></td>
        <td><%= response.user.get_full_name %></td>
        <td><%= response.user.nickname %></td>
        <td><%= response.user.email %></td>
        <td><%= response.created_at.strftime('%Y年%m月%d日 %H:%M:%S') %></td>
        <td><%= response.updated_at.strftime('%Y年%m月%d日 %H:%M:%S') %></td>
        <td>
          削除
          <%#= link_to "削除", admin_user_path(user), method: :delete, class: "btn btn-danger", data: {confirm: "削除してよろしいですか？"} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
